---
import { Layout } from "../components/UI/Layout";
import SignInIsland from "../components/Auth/SignInIsland";
---

<Layout>
  <div class="w-full max-w-md mx-auto flex flex-col gap-6 md:gap-8 items-center justify-center min-h-[60vh] px-4 py-8 md:py-12">
    <h1 class="font-heading text-2xl md:text-3xl lg:text-4xl font-bold text-accent1-light dark:text-accent1-dark mb-1 md:mb-2 text-center">Sign in to cramti.me</h1>
    <p class="text-text-secondary-light dark:text-text-secondary-dark mb-4 md:mb-6 text-center text-sm md:text-base">Access your personalized dashboard, study plans, and more. 100% free, always.</p>
    <SignInIsland client:only="react" />
    <p class="text-text-secondary-light dark:text-text-secondary-dark text-center mt-2 md:mt-4 text-sm md:text-base">Don't have an account? <a href="/signup" class="text-primary dark:text-primary-dark hover:underline">Sign up free</a></p>
  </div>
</Layout> 