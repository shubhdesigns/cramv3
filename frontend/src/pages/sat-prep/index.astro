---
import BaseLayout from '../../layouts/BaseLayout.astro';

// Use static data for SAT prep sections
const satSections = [
  { 
    id: "reading-writing", 
    name: "Reading & Writing", 
    icon: "üìö", 
    description: "Master reading comprehension, grammar, and effective writing skills."
  },
  { 
    id: "math-calculator", 
    name: "Math (Calculator)", 
    icon: "üßÆ", 
    description: "Practice algebra, problem solving, and data analysis with calculator." 
  },
  { 
    id: "math-no-calculator", 
    name: "Math (No Calculator)", 
    icon: "üìê", 
    description: "Master essential math concepts without calculator dependency."
  },
  { 
    id: "essay", 
    name: "Essay Writing", 
    icon: "‚úçÔ∏è", 
    description: "Learn to analyze arguments and write persuasive essays."
  }
];

// Resources for SAT prep
const studyResources = [
  { 
    id: "practice-tests", 
    name: "Full Practice Tests", 
    icon: "üìù", 
    description: "Complete timed practice tests to simulate test day conditions." 
  },
  { 
    id: "flashcards", 
    name: "Vocabulary Flashcards", 
    icon: "üî§", 
    description: "Build essential vocabulary with spaced repetition learning." 
  },
  { 
    id: "strategies", 
    name: "Test Strategies", 
    icon: "üß†", 
    description: "Learn time management, question approach, and scoring strategies." 
  },
  { 
    id: "daily-drills", 
    name: "Daily Practice Drills", 
    icon: "üîÑ", 
    description: "Short, focused practice sessions to build skills consistently." 
