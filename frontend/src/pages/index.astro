---
import BaseLayout from '../layouts/BaseLayout.astro';
import { BookOpen, CheckCircle, BarChart3, Sparkles, Trophy, Brain } from 'lucide-react';
---

<BaseLayout title="cramti.me - Your AP and SAT Study Platform">
  <!-- Hero Section -->
  <section class="bg-gradient-to-b from-primary to-primary-dark dark:from-primary-dark dark:to-background-dark py-12 md:py-24">
    <div class="container mx-auto px-4">
      <div class="flex flex-col md:flex-row items-center">
        <div class="md:w-1/2 md:pr-12 mb-10 md:mb-0">
          <h1 class="text-3xl md:text-5xl font-bold mb-4 md:mb-6 text-white dark:text-white leading-tight">
            Lock in with cramti.me
          </h1>
          <p class="text-lg md:text-xl mb-6 md:mb-8 text-white/90 dark:text-white/90 max-w-lg">
            The ultimate study companion - created by students, for students.
          </p>
          <div class="flex flex-wrap gap-3 md:gap-4">
            <a href="/signup" class="w-full sm:w-auto px-4 py-3 md:px-6 md:py-3 bg-white text-primary text-center rounded-md hover:bg-gray-100 transition-colors font-medium">
              Start Studying Free
            </a>
            <a href="/subjects" class="w-full sm:w-auto px-4 py-3 md:px-6 md:py-3 border border-white text-white dark:text-white dark:border-white text-center rounded-md hover:bg-white/10 transition-colors font-medium">
              Explore Subjects
            </a>
          </div>
        </div>
        <div class="md:w-1/2 w-full flex justify-center items-center">
          <div class="bg-white dark:bg-background-dark/80 p-8 rounded-xl shadow-lg transform hover:scale-105 transition-transform duration-300">
            <img 
              src="../logo.png" 
              alt="cramti.me logo" 
              width="400"
              height="400" 
              class="mx-auto max-w-full h-auto rounded-lg" 
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-12 md:py-16 bg-white dark:bg-surface-dark">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-2xl md:text-3xl font-bold mb-3 md:mb-4 dark:text-white">Study Tools That Make a Difference</h2>
        <p class="text-text-secondary-light dark:text-text-secondary-dark max-w-2xl mx-auto">Our study platform is designed to help you succeed with a variety of effective learning tools.</p>
      </div>
      
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 md:gap-8">
        <div class="bg-surface-light dark:bg-surface-secondary-dark p-5 md:p-6 rounded-lg hover:shadow-md transition-shadow">
          <div class="text-primary dark:text-primary-dark mb-4">
            <Sparkles className="w-8 h-8 md:w-10 md:h-10" />
          </div>
          <h3 class="text-lg md:text-xl font-bold mb-2 md:mb-3 dark:text-white">AI-Powered Learning</h3>
          <p class="text-text-secondary-light dark:text-text-secondary-dark">Personalized study plans based on your strengths and weaknesses, adapted in real-time.</p>
        </div>
        
        <div class="bg-surface-light dark:bg-surface-secondary-dark p-5 md:p-6 rounded-lg hover:shadow-md transition-shadow">
          <div class="text-primary dark:text-primary-dark mb-4">
            <BookOpen className="w-8 h-8 md:w-10 md:h-10" />
          </div>
          <h3 class="text-lg md:text-xl font-bold mb-2 md:mb-3 dark:text-white">Comprehensive Resources</h3>
          <p class="text-text-secondary-light dark:text-text-secondary-dark">Access to quality content for all AP subjects and college entrance exams.</p>
        </div>
        
        <div class="bg-surface-light dark:bg-surface-secondary-dark p-5 md:p-6 rounded-lg hover:shadow-md transition-shadow">
          <div class="text-primary dark:text-primary-dark mb-4">
            <BarChart3 className="w-8 h-8 md:w-10 md:h-10" />
          </div>
          <h3 class="text-lg md:text-xl font-bold mb-2 md:mb-3 dark:text-white">Progress Tracking</h3>
          <p class="text-text-secondary-light dark:text-text-secondary-dark">Monitor your improvement with detailed analytics and performance insights.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Subjects Preview Section -->
  <section class="py-12 md:py-16 bg-gradient-to-b from-background-light to-surface-light dark:from-background-dark dark:to-surface-dark">
    <div class="container mx-auto px-4">
      <div class="text-center mb-10 md:mb-12">
        <h2 class="text-2xl md:text-3xl font-bold mb-3 md:mb-4 dark:text-white">Popular AP & SAT Subjects</h2>
        <p class="text-text-secondary-light dark:text-text-secondary-dark max-w-2xl mx-auto">Explore our most popular subjects and start studying today.</p>
      </div>
      
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-5 md:gap-6">
        <a href="/subjects/ap-calculus" class="bg-white dark:bg-surface-secondary-dark rounded-lg shadow-sm hover:shadow-md transition-shadow overflow-hidden">
          <div class="h-32 sm:h-40 bg-primary/20 dark:bg-primary/10 flex items-center justify-center">
            <span class="text-3xl md:text-4xl font-bold text-primary dark:text-primary-dark">âˆ«</span>
          </div>
          <div class="p-4">
            <h3 class="font-bold mb-1 dark:text-white">AP Calculus</h3>
            <p class="text-sm text-text-secondary-light dark:text-text-secondary-dark">Derivatives, integrals, and more</p>
          </div>
        </a>
        
        <a href="/subjects/ap-biology" class="bg-white dark:bg-surface-secondary-dark rounded-lg shadow-sm hover:shadow-md transition-shadow overflow-hidden">
          <div class="h-32 sm:h-40 bg-accent/20 dark:bg-accent/10 flex items-center justify-center">
            <span class="text-3xl md:text-4xl font-bold text-accent-dark dark:text-accent-light">ðŸ§¬</span>
          </div>
          <div class="p-4">
            <h3 class="font-bold mb-1 dark:text-white">AP Biology</h3>
            <p class="text-sm text-text-secondary-light dark:text-text-secondary-dark">Cells, genetics, and ecosystems</p>
          </div>
        </a>
        
        <a href="/subjects/ap-history" class="bg-white dark:bg-surface-secondary-dark rounded-lg shadow-sm hover:shadow-md transition-shadow overflow-hidden">
