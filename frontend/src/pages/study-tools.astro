---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Clock, BookOpen, BarChart3, Lightbulb, BrainCircuit, Flashcard, FileQuestion, Calendar } from 'lucide-react';
---

<BaseLayout title="Study Tools | CramTime">
  <!-- Hero Section -->
  <section class="bg-gradient-to-b from-primary/10 to-background-light py-12">
    <div class="container mx-auto px-4">
      <div class="text-center max-w-3xl mx-auto">
        <h1 class="text-4xl md:text-5xl font-bold mb-6 text-text-primary-light">
          Smart Tools for Effective Studying
        </h1>
        <p class="text-xl text-text-secondary-light mb-8">
          Our AI-powered study tools help you learn more efficiently and retain information longer.
          Personalized to your learning style and academic goals.
        </p>
        <a href="/signup" class="px-6 py-3 bg-primary text-white rounded-md hover:bg-primary-dark transition-colors inline-block font-medium">
          Try All Tools Free
        </a>
      </div>
    </div>
  </section>

  <!-- Tools Grid Section -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold mb-12 text-center">Our Learning Tools</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Flashcards -->
        <div class="bg-surface-light rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow">
          <div class="flex items-center mb-6">
            <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center text-primary">
              <Flashcard className="w-6 h-6" />
            </div>
            <h3 class="text-xl font-bold ml-4">Smart Flashcards</h3>
          </div>
          <p class="text-text-secondary-light mb-4">
            Create, customize and study with AI-generated flashcards that adapt to your learning progress.
          </p>
          <a href="/flashcards" class="text-primary font-medium hover:text-primary-dark transition-colors flex items-center">
            Start creating <span class="ml-1">→</span>
          </a>
        </div>
        
        <!-- Practice Quizzes -->
        <div class="bg-surface-light rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow">
          <div class="flex items-center mb-6">
            <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center text-primary">
              <FileQuestion className="w-6 h-6" />
            </div>
            <h3 class="text-xl font-bold ml-4">Practice Quizzes</h3>
          </div>
          <p class="text-text-secondary-light mb-4">
            Test your knowledge with customized quizzes that focus on your weak areas and mimic real exam questions.
          </p>
          <a href="/quizzes" class="text-primary font-medium hover:text-primary-dark transition-colors flex items-center">
            Take a quiz <span class="ml-1">→</span>
          </a>
        </div>
        
        <!-- Study Planner -->
        <div class="bg-surface-light rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow">
          <div class="flex items-center mb-6">
            <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center text-primary">
              <Calendar className="w-6 h-6" />
            </div>
            <h3 class="text-xl font-bold ml-4">Study Planner</h3>
          </div>
          <p class="text-text-secondary-light mb-4">
            Get a personalized study schedule based on your exam dates, strengths, and available study time.
          </p>
          <a href="/study-plan" class="text-primary font-medium hover:text-primary-dark transition-colors flex items-center">
            Create a plan <span class="ml-1">→</span>
          </a>
        </div>
        
        <!-- AI Tutor -->
        <div class="bg-surface-light rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow">
          <div class="flex items-center mb-6">
            <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center text-primary">
              <BrainCircuit className="w-6 h-6" />
            </div>
            <h3 class="text-xl font-bold ml-4">AI Tutor</h3>
          </div>
          <p class="text-text-secondary-light mb-4">
            Get instant explanations and clarification on difficult concepts with our AI tutor.
          </p>
          <div class="text-accent-dark font-medium flex items-center">
            Coming Soon
          </div>
        </div>
        
        <!-- Progress Tracking -->
        <div class="bg-surface-light rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow">
          <div class="flex items-center mb-6">
            <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center text-primary">
              <BarChart3 className="w-6 h-6" />
            </div>
            <h3 class="text-xl font-bold ml-4">Progress Analytics</h3>
          </div>
          <p class="text-text-secondary-light mb-4">
            Track your learning journey with detailed analytics showing your improvement over time.
          </p>
          <a href="/dashboard" class="text-primary font-medium hover:text-primary-dark transition-colors flex items-center">
            View progress <span class="ml-1">→</span>
          </a>
        </div>
        
        <!-- Resource Library -->
        <div class="bg-surface-light rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow">
          <div class="flex items-center mb-6">
            <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center text-primary">
              <BookOpen className="w-6 h-6" />
            </div>
            <h3 class="text-xl font-bold ml-4">Resource Library</h3>
          </div>
          <p class="text-text-secondary-light mb-4">
            Access a comprehensive collection of study materials, practice tests, and reference guides.
          </p>
          <a href="/subjects" class="text-primary font-medium hover:text-primary-dark transition-colors flex items-center">
            Browse resources <span class="ml-1">→</span>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- How It Works Section -->
  <section class="py-16 bg-gradient-to-b from-background-light to-surface-light">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold mb-12 text-center">How Our Tools Help You Excel</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-4xl mx-auto">
        <div class="text-center">
          <div class="w-16 h-16 rounded-full bg-primary/10 flex items-center justify-center text-primary mx-auto mb-4">
            <Lightbulb className="w-8 h-8" />
          </div>
          <h3 class="text-xl font-bold mb-2">Personalized Learning</h3>
          <p class="text-text-secondary-light">Our AI adapts to your unique learning style and knowledge gaps.</p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 rounded-full bg-primary/10 flex items-center justify-center text-primary mx-auto mb-4">
            <Clock className="w-8 h-8" />
          </div>
          <h3 class="text-xl font-bold mb-2">Time Efficiency</h3>
          <p class="text-text-secondary-light">Study smarter, not harder, with tools that focus on what you need most.</p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 rounded-full bg-primary/10 flex items-center justify-center text-primary mx-auto mb-4">
            <BrainCircuit className="w-8 h-8" />
          </div>
          <h3 class="text-xl font-bold mb-2">Active Recall</h3>
          <p class="text-text-secondary-light">Our methods are based on proven learning science for better retention.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 max-w-3xl text-center">
      <h2 class="text-3xl font-bold mb-6">Ready to Transform Your Study Habits?</h2>
      <p class="text-xl mb-8 text-text-secondary-light">
        Join thousands of students who have improved their grades and test scores with CramTime's study tools.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/signup" class="px-6 py-3 bg-primary text-white rounded-md hover:bg-primary-dark transition-colors font-medium">
          Sign Up Free
        </a>
        <a href="/subjects" class="px-6 py-3 border border-primary text-primary rounded-md hover:bg-primary hover:text-white transition-colors font-medium">
          Explore Subjects
        </a>
      </div>
    </div>
  </section>
</BaseLayout>