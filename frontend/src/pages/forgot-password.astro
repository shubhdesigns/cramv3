---
import { Layout } from "../components/UI/Layout";
import ForgotPasswordIsland from "../components/Auth/ForgotPasswordIsland";
---

<Layout>
  <div class="w-full max-w-md mx-auto flex flex-col gap-6 md:gap-8 items-center justify-center min-h-[60vh] px-4 py-8 md:py-12">
    <h1 class="font-heading text-2xl md:text-3xl lg:text-4xl font-bold text-accent1-light dark:text-accent1-dark mb-1 md:mb-2 text-center">Reset Password</h1>
    <p class="text-text-secondary-light dark:text-text-secondary-dark mb-4 md:mb-6 text-center text-sm md:text-base">Enter your email address below and we'll send you a link to reset your password.</p>
    <ForgotPasswordIsland client:only="react" />
    <div class="text-center mt-4">
      <a href="/signin" class="text-primary dark:text-primary-dark hover:underline text-sm md:text-base">Back to Sign In</a>
    </div>
  </div>
</Layout> 