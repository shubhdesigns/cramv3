---
import Icon from 'astro-icon';
---

<section class="py-40 bg-gradient-to-b from-white to-gray-50 dark:from-gray-900 dark:to-gray-800 relative overflow-hidden">
  <!-- Enhanced 3D Background Elements -->
  <div class="absolute inset-0">
    <div class="absolute inset-0 bg-gradient-to-b from-blue-500/5 via-purple-500/5 to-pink-500/5">
      {[...Array(150)].map((_, i) => (
        <div
          class="absolute w-4 h-4 bg-gradient-to-r from-blue-500/20 to-purple-500/20 rounded-full backdrop-blur-sm"
          style={{
            left: `${Math.random() * 100}%`,
            top: `${Math.random() * 100}%`,
            transform: `scale(${Math.random() * 0.5 + 0.5}) rotate(${Math.random() * 360}deg)`,
            animation: `float ${Math.random() * 3 + 2}s infinite ease-in-out, pulse ${Math.random() * 2 + 1}s infinite ease-in-out, glow ${Math.random() * 4 + 3}s infinite ease-in-out`
          }}
        />
      ))}
    </div>
    <!-- Add floating geometric shapes -->
    <div class="absolute inset-0">
      {[...Array(30)].map((_, i) => (
        <div
          class="absolute w-16 h-16 border-2 border-blue-500/20 rounded-lg backdrop-blur-sm"
          style={{
            left: `${Math.random() * 100}%`,
            top: `${Math.random() * 100}%`,
            transform: `rotate(${Math.random() * 360}deg)`,
            animation: `float ${Math.random() * 4 + 3}s infinite ease-in-out, rotate ${Math.random() * 10 + 10}s infinite linear, glow ${Math.random() * 4 + 3}s infinite ease-in-out`
          }}
        />
      ))}
    </div>
    <!-- Add floating orbs -->
    <div class="absolute inset-0">
      {[...Array(8)].map((_, i) => (
        <div
          class="absolute w-32 h-32 rounded-full backdrop-blur-sm"
          style={{
            left: `${Math.random() * 100}%`,
            top: `${Math.random() * 100}%`,
            background: `radial-gradient(circle at center, rgba(${Math.random() * 255}, ${Math.random() * 255}, ${Math.random() * 255}, 0.1), transparent)`,
